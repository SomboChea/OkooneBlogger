@model OkooneBlogger.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<h2>Create</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                @(Html.Kendo().TextBoxFor(a => a.Username)
                      .HtmlAttributes(new { @placeholder = "Enter Username" })
                      )
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                @(Html.Kendo().TextBoxFor(a => a.Email)
                      .HtmlAttributes(new { @placeholder = "Enter email" })
                      )
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                @(Html.Kendo().TextBoxFor(a => a.Password)
                      .HtmlAttributes(new { @placeholder = "Enter password" })
                      )
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                @(Html.Kendo().TextBoxFor(a => a.FullName)
                      .HtmlAttributes(new { @placeholder = "Enter fullname" })
                      )
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                @(Html.Kendo().DateTimePickerFor(a => a.Date)
                      .Value(DateTime.Now)
                      .HtmlAttributes(new { style = "width: 100%", title = "Date" })
                      .DateInput()
                      )
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                @(Html.Kendo().Button()
                      .Name("btnCreate")
                      .HtmlAttributes(new { type = "submit", @class = "k-primary" })
                      .Content("Create")
                      )
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
