@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="auth-section">
    <h2>Login Form</h2>

    <form asp-action="Login" method="post">
        <ul id="fieldlist">
            <li>
                <label for="username">Username:</label>
                @(Html.Kendo().TextBox()
                              .Name("username")
                              .HtmlAttributes(new { @placeholder = "Enter username" })
                              .Value("")
                )
            </li>
            <li>
                <label for="password">Password:</label>
                @(Html.Kendo().TextBox()
                              .Name("password")
                              .HtmlAttributes(new { type = "password", @placeholder = "Enter password" })
                              .Value("")
                )
            </li>
        </ul>
        <br />
        @(Html.Kendo().Button()
                      .Name("btnLogin")
                      .HtmlAttributes(new { type = "submit", @class = "k-primary" })
                      .Content("Login")
        )
    </form>
</div>

<style>
    .auth-section {
        width: 300px;
        margin: 35px auto 50px;
        padding: 30px;
    }

        .auth-section h2 {
            text-transform: uppercase;
            font-size: 1.5em;
            margin-bottom: 20px;
            font-weight: bold
        }

    #fieldlist {
        margin: 0;
        padding: 0;
    }

        #fieldlist li {
            list-style: none;
            padding: 10px 0;
        }

        #fieldlist label {
            display: inline-block;
            width: 130px;
            margin-right: 5px;
        }

        #fieldlist .k-textbox {
            width: 100%;
        }
</style>